<div class="input-group comment-user", id="comment_<%= comment.id %>">
  <span class="input-group-addon comment-form-list"><%= link_to gravatar_for(comment.user, size: Settings.comment.avatar_size),
    comment.user %></span>
  <div class="comment-text word-break">
    <%= link_to comment.user.name, comment.user %>
    <%= comment.content %>
  </div>
  <span class="sub-text">
    <%= time_ago_in_words comment.created_at %>
      <% if comment.user.is_user? current_user %>
        <%= link_to t(".delete"), [comment.post, comment],
          method: :delete, remote: true, data: {confirm: t(".sure")} %>
    <% end %>
  </span>
</div>
