<% provide :title, t(".home") %>
<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section>
        <%= render "shared/user_info" %>
      </section>
      <section class="stats">
        <%= render "shared/stats" %>
      </section>
      <section class="micropost_form">
        <%= render "shared/post_form" %>
      </section>
    </aside>
    <div class="col-md-8">
      <h3><%= t ".micropost_feed" %></h3>
      <%= render "shared/feed" %>
    </div>
  </div>
<% else %>
  <div class="container-responsive">
    <div class="row">
      <div class="col-xs-12 col-sm-6 col-md-8">
        <div class="center jumbotron">
          <h1><%= t ".welcome" %></h1>
          <h2><%= t ".pragraph" %></h2>    
          <%= link_to t(".signup"), signup_path, class: "btn btn-lg btn-primary" %>
        </div>
      </div>
      <div class="col-xs-6 col-md-4">
        <h3><%= t ".login" %></h3>
        <%= render "shared/form_login" %>
      </div>
    </div>
  </div>
<% end %>
