<%= form_for @post do |f| %>
  <%= render "shared/error_messages", object: f.object %>
  <div>
    <%= f.label :title, t(".title") %>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.text_area :content, placeholder: t(".compose") %>
  </div>
  <%= f.submit t(".post"), class: "btn btn-primary" %>
<% end %>
